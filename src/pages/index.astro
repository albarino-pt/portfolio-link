---
import Image from "astro/components/Image.astro";
import Card from "../components/card.astro";
import Chip from "../components/chip.astro";

// Put all your links here
const links: Link[] = [
  {
    desc: "My work", // The text that will be rendered
    link: "https://albarino.pt", // The link
    icon: "fa-solid fa-briefcase", // An icon from Font Awesome: https://fontawesome.com/search?o=r&m=free
  },
  {
    desc: "Buy me a Coffe",
    link: "https://ko-fi.com/the_kanlord",
    icon: "fa-solid fa-mug-hot",
  },
  {
    desc: "Support",
    link: "/support",
    icon: "fa-solid fa-laptop-medical",
  },
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="/favicon.png" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Useful links of The_KanLord" />
    <meta name="author" content="Francisco Albarino" />
    <meta property="og:title" content="Francisco Albarino" />
    <meta property="og:image" content="favicon.png" />
    <meta property="og:description" content="Linktree of Francisco Albarino" />
    <meta
      property="twitter:description"
      content="Linktree of Francisco Albarino"
    />
    <meta property="twitter:title" content="Francisco Albarino" />
    <meta property="twitter:image" content="favicon.png" />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:site" content="@The_KanLord" />

    <title>Links of The KanLord</title>
    <style>
      @font-face {
        font-family: Geist;
        src: url(/Geist.ttf);
        font-display: swap;
      }
      @keyframes glow {
        0%,
        100% {
          box-shadow:
            0 0 15px rgba(255, 255, 255, 0.1),
            0 0 30px rgba(255, 255, 255, 0.1),
            0 0 45px rgba(255, 255, 255, 0.1);
        }
        50% {
          box-shadow:
            0 0 20px rgba(255, 255, 255, 0.3),
            0 0 40px rgba(255, 255, 255, 0.3),
            0 0 60px rgba(255, 255, 255, 0.3);
        }
      }

      .glow {
        animation: glow 5s infinite alternate;
      }
    </style>
  </head>
  <body
    class="bg-[url('/fundolink.jpg')] bg-cover bg-center flex justify-center items-center w-screen h-screen font-[Geist] text-white"
  >
    <main class="w-[80%] flex flex-col gap-8 items-center">
      <img
        src="avatar-01.png"
        alt="Profile Pic"
        class="object-scale-down h-48 w-48 glow rounded-full"
      />

      <h1 class="md:text-6xl text-4xl font-black text-center">The KanLord</h1>

      <div class="grid justify-center gap-4">
        {
          links.map(({ desc, link, icon }) => {
            return <Card {desc} {link} {icon} />;
          })
        }
      </div>

      <div class="flex justify-center gap-8">
        <!-- Put some social links who have a definitive icon here: -->
        <Chip link="facebook.com/TheKanLord/" icon="fa-brands fa-facebook" />
        <Chip link="instagram.com/the_kanlord" icon="fa-brands fa-instagram" />
        <Chip link="x.com/The_KanLord" icon="fa-brands fa-x-twitter" />
        <Chip link="snapchat.com/add/kanlord" icon="fa-brands fa-snapchat" />
        <Chip
          link="linkedin.com/in/francisco-albarino"
          icon="fa-brands fa-linkedin"
        />
      </div>

      <p class="text-center mx-auto">Hello Human</p>
    </main>
  </body>
</html>
